<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context=".MedicamentoDetalleActivity">

    <TextView
        android:id="@+id/tvNombreMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Medicamento"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#212121"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvDosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosis: "
        android:textSize="18sp"
        android:textColor="#424242"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvTiempoRestante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo restante"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="#757575" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ—‘ Eliminar medicamento"
        android:layout_marginTop="16dp"/>


    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

