<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvNombreMedicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Medicamento"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- Dosis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosis"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvDosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="24dp" />

        <!-- Próxima dosis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima dosis"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvProximaDosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="24dp" />

        <!-- Tratamiento finalizado en -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tratamiento finalizado en"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <View
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvTiempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="32dp" />

        <!-- Botones -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarcarComoTomado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar como tomado"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_pill"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="16dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar medicamento"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_delete"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="@color/colorError"
            app:cornerRadius="16dp"
            app:iconGravity="textStart" />

    </LinearLayout>
</RelativeLayout>
