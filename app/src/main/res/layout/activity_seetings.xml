<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#000">

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorial"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Ver Historial de Tomas"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="#C700FF"
            app:backgroundTint="#0A0F2C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorialCitas"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Ver Historial de Citas"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="#9C27B0"
            app:backgroundTint="#0A0F2C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubirArchivo"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:text="Subir Archivo"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="#6F2CFF"
            app:backgroundTint="#0A0F2C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCrearCita"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:text="Crear Cita"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="#4CAF50"
            app:backgroundTint="#0A0F2C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInformeActivity"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:text="Exportar Informe"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="#00B4FF"
            app:backgroundTint="#0A0F2C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActualizarPerfil"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:text="Actualizar Perfil"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="#27B0A9"
            app:backgroundTint="#0A0F2C" />

    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E61717"
        app:backgroundTint="#0A0F2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
