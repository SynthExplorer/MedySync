<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#000"
    tools:context=".SeetingsActivity">

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorial"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Ver Historial de Tomas"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:iconPadding="12dp"
            app:backgroundTint="#1E88E5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubirArchivo"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📁 Subir Archivo"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:iconPadding="12dp"
            app:backgroundTint="#03A9F4"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearCita"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="📅 Crear Cita"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                app:cornerRadius="24dp"
                app:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHistorialCitas"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="📖 Ver Historial"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                app:cornerRadius="24dp"
                app:backgroundTint="#607D8B"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚪 Cerrar Sesión"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:cornerRadius="24dp"
            app:iconPadding="12dp"
            app:backgroundTint="#D32F2F"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
