<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <GridLayout
        android:id="@+id/gridMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="4"
        android:columnOrderPreserved="false"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorial"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="📋 Historial Tomas"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#1E88E5"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubirArchivo"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="📁 Subir Archivo"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#03A9F4"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCrearCita"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="📅 Crear Cita"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#4CAF50"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorialCitas"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="📖 Historial Citas"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#607D8B"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInformeActivity"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="📊 Exportar Informe"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#27B0A9"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActualizarPerfil"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="👤 Actualizar Perfil"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#9C27B0"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="🚪 Cerrar Sesión"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#D32F2F"
            android:layout_margin="8dp"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
